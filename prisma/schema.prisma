generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Schema for the category

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  productNew   ProductNew[] @relation("categories")
}

// Schema for the product

model ProductNew {
  product_id    Int       @unique @id @default(autoincrement())
  product_name  String
  description   String?
  product_price Float
  categories    Category[] @relation("categories")
  variantsNew   VariantNew[]
}

//schema for variant

model VariantNew {
  variant_id   Int      @unique @id @default(autoincrement())
  product_id   Int
  name  String
  attribute_name String[]
  attribute_value String[]
  additional_cost Float[]
  stock_count     Int[]
  SKU             Int   @unique 
  productNew      ProductNew  @relation(fields: [product_id], references: [product_id],onDelete: Cascade, onUpdate: Cascade )
}